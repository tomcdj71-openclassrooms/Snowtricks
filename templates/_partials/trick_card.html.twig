<article class="bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
	<p class="mb-2 font-light text-gray-500 dark:text-gray-400">
		<img src="{{ trick.featuredImage }}" alt="trick image">
	</p>
	{% if is_granted('IS_AUTHENTICATED_FULLY') %}
		<div class="flex justify-end space-x-4">
			<i data-feather="edit-2" class="text-green-600 feather-24 pb-2"></i>
			<i data-feather="trash-2" class="text-red-600 feather-24 pb-2"></i>
		</div>
		<hr>
	{% endif %}
	<div class="flex justify-between items-center">
		<div class="flex items-center space-x-4">
			<h2 class="pl-2 mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white">
				<a href="{{ trick.slug|default('') }}">{{ trick.title|slice(0, 30) ~ '...' }}</a>
			</h2>
		</div>
	</div>
</article>
